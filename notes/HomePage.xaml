<Page
    x:Class="Notes.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Notes"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="#FF30323C">
    <Page.Resources>
        <ImageBrush x:Key="ButtonBackground1" ImageSource="/Assets/plusIcon.png" Stretch="UniformToFill"/>
        <ImageSource x:Key="ImageBrushImageSource1">/Assets/plusIconWhite.png</ImageSource>
    </Page.Resources>

    <Grid>
        <Grid.Background>
            <ImageBrush/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Border>
            <Grid Background="#FF3B3E49">
                <Button x:Name="butadd"  Height="50" Width="90" Click="butadd_Click" Tag="add" Margin="1390,0,0,0"  >

                    <Grid Width="90" Height="50" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,-7">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="50"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Image Source="Assets/plusIconWhite1.png" Height="50" Width="50"/>
                        <Border Height="50" Width="40" Grid.Column="1">
                            <TextBlock Height="20" Width="30" Text="Add" Foreground="White" HorizontalAlignment="Center" FontSize="14" VerticalAlignment="Top" Margin="0,14,0,0"/>
                        </Border>
                    </Grid>
                </Button>

            </Grid>

        </Border>
        <Border Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="950">
            <Grid Margin="10,0,-10,0">

            </Grid>
        </Border>
    </Grid>
</Page>
